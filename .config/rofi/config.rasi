configuration {
    modes: "drun,calc";
    font: "Maple Mono 12";
    location: 0;
    fixed-num-lines: true;
    show-icons: true;
    terminal: "kitty";
    sorting-method: "fzf";
    display-drun: "ï€‚ ";
    kb-mode-next: "Tab";
