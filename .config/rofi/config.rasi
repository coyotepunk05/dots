        action: "kb-cancel";
        delay:  0;
    }

    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
    calc {
        hint-result: "Result: ";
        hint-welcome: "Result:";
      }
}

@theme "/dev/null"
@import "~/.config/rofi/theme.rasi"
