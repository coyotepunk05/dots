format = """
[](#64768C)\
$os\
$username\
[](bg:#748DA1 fg:#64768C)\
$directory\
[](fg:#748DA1 bg:#60AAEB)\
$git_branch\
$git_status\
[](fg:#60AAEB bg:#7CC2F1)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
[](fg:#7CC2F1 bg:#90A0A9)\
$docker_context\
[](fg:#90A0A9 bg:#ADC4B0)\
$time\
[ ](fg:#ADC4B0)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#64768C"
style_root = "bg:#64768C"
format = '[$user ](fg:#000000 $style)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#64768C"
disabled = true # Disabled by default

[directory]
style = "bg:#748DA1"
format = "[ $path ](fg:#000000 $style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = " 󰈙 "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important 󰈙 " = " 󰈙 "

[c]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[docker_context]
symbol = " "
style = "bg:#90A0A9"
format = '[ $symbol $context ](fg:#000000 $style)'

[elixir]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg: #000000$style)'

[elm]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[git_branch]
symbol = ""
style = "bg:#60AAEB"
format = '[ $symbol $branch ](fg:#000000 $style)'

[git_status]
style = "bg:#60AAEB"
format = '[$all_status$ahead_behind ](fg:#000000 $style)'

[golang]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[gradle]
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[haskell]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[java]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[julia]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nodejs]
symbol = ""
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nim]
symbol = "󰆥 "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[rust]
symbol = ""
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[scala]
symbol = " "
style = "bg:#7CC2F1"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#ADC4B0"
format = '[ 󰋑 $time ](fg:#000000 $style)'
