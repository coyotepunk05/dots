format = """
[](#2878D9)\
$os\
$username\
[](bg:#3488DB fg:#2878D9)\
$directory\
[](fg:#3488DB bg:#5B9DDD)\
$git_branch\
$git_status\
[](fg:#5B9DDD bg:#619FC7)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
[](fg:#619FC7 bg:#92A0B7)\
$docker_context\
[](fg:#92A0B7 bg:#96B3DB)\
$time\
[ ](fg:#96B3DB)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#2878D9"
style_root = "bg:#2878D9"
format = '[$user ](fg:#000000 $style)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#2878D9"
disabled = true # Disabled by default

[directory]
style = "bg:#3488DB"
format = "[ $path ](fg:#000000 $style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = " 󰈙 "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important 󰈙 " = " 󰈙 "

[c]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[docker_context]
symbol = " "
style = "bg:#92A0B7"
format = '[ $symbol $context ](fg:#000000 $style)'

[elixir]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg: #000000$style)'

[elm]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[git_branch]
symbol = ""
style = "bg:#5B9DDD"
format = '[ $symbol $branch ](fg:#000000 $style)'

[git_status]
style = "bg:#5B9DDD"
format = '[$all_status$ahead_behind ](fg:#000000 $style)'

[golang]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[gradle]
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[haskell]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[java]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[julia]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nodejs]
symbol = ""
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nim]
symbol = "󰆥 "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[rust]
symbol = ""
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[scala]
symbol = " "
style = "bg:#619FC7"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#96B3DB"
format = '[ 󰋑 $time ](fg:#000000 $style)'
