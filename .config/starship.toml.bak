format = """
[](#70A5B4)\
$os\
$username\
[](bg:#79C8C0 fg:#70A5B4)\
$directory\
[](fg:#79C8C0 bg:#A69FA4)\
$git_branch\
$git_status\
[](fg:#A69FA4 bg:#D3B39A)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
[](fg:#D3B39A bg:#AAD2BB)\
$docker_context\
[](fg:#AAD2BB bg:#DCC59A)\
$time\
[ ](fg:#DCC59A)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#70A5B4"
style_root = "bg:#70A5B4"
format = '[$user ](fg:#000000 $style)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#70A5B4"
disabled = true # Disabled by default

[directory]
style = "bg:#79C8C0"
format = "[ $path ](fg:#000000 $style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = " 󰈙 "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important 󰈙 " = " 󰈙 "

[c]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[docker_context]
symbol = " "
style = "bg:#AAD2BB"
format = '[ $symbol $context ](fg:#000000 $style)'

[elixir]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg: #000000$style)'

[elm]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[git_branch]
symbol = ""
style = "bg:#A69FA4"
format = '[ $symbol $branch ](fg:#000000 $style)'

[git_status]
style = "bg:#A69FA4"
format = '[$all_status$ahead_behind ](fg:#000000 $style)'

[golang]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[gradle]
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[haskell]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[java]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[julia]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nodejs]
symbol = ""
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[nim]
symbol = "󰆥 "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[rust]
symbol = ""
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[scala]
symbol = " "
style = "bg:#D3B39A"
format = '[ $symbol ($version) ](fg:#000000 $style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#DCC59A"
format = '[ 󰋑 $time ](fg:#000000 $style)'
