format = """
[](#4C6764)\
$os\
$username\
[](bg:#658779 fg:#4C6764)\
$directory\
[](fg:#658779 bg:#2A4D92)\
$git_branch\
$git_status\
[](fg:#2A4D92 bg:#245BA0)\
$c\
$elixir\
$elm\
$golang\
$gradle\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
[](fg:#245BA0 bg:#61989F)\
$docker_context\
[](fg:#61989F bg:#3D9FC9)\
$time\
[ ](fg:#3D9FC9)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#4C6764"
style_root = "bg:#4C6764"
format = '[$user ](fg:#FFFFFF $style)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#4C6764"
disabled = true # Disabled by default

[directory]
style = "bg:#658779"
format = "[ $path ](fg:#FFFFFF $style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = " 󰈙 "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important 󰈙 " = " 󰈙 "

[c]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[docker_context]
symbol = " "
style = "bg:#61989F"
format = '[ $symbol $context ](fg:#FFFFFF $style)'

[elixir]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg: #FFFFFF$style)'

[elm]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[git_branch]
symbol = ""
style = "bg:#2A4D92"
format = '[ $symbol $branch ](fg:#FFFFFF $style)'

[git_status]
style = "bg:#2A4D92"
format = '[$all_status$ahead_behind ](fg:#FFFFFF $style)'

[golang]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[gradle]
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[haskell]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[java]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[julia]
symbol = " "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[nodejs]
symbol = ""
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[nim]
symbol = "󰆥 "
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[rust]
symbol = ""
style = "bg:#245BA0"
format = '[ $symbol ($version) ](fg:#FFFFFF $style)'

[scala]
symbol = " "
style = "bg:#245BA0"
